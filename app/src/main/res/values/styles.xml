<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Sub themes -->
  <style name="DarkToolbarThemeOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    <item name="colorPrimary">@color/primary</item>
    <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/accentDay</item>
    <item name="colorSecondary">@color/accentDay</item>
  </style>

  <style name="NavbarThemeDay" parent="AppThemeDay">
    <!-- Background is green, so make touch feedback other color -->
    <item name="colorAccent">@color/accentDay</item>
    <item name="colorSecondary">@color/accentDay</item>
  </style>

  <style name="NavbarThemeNight" parent="AppThemeNight">
    <!-- Background is green, so make touch feedback other color -->
    <item name="colorAccent">@color/accentNight</item>
    <item name="colorSecondary">@color/accentNight</item>
  </style>

  <style name="EditFeedThemeDay" parent="DialogThemeDay" />
  <style name="EditFeedThemeNight" parent="DialogThemeNight" />

  <style name="DialogThemeDay" parent="AppThemeDay">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="isFloatingWindow">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="DialogThemeNight" parent="AppThemeNight">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="isFloatingWindow">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="AppThemeDay" parent="AppBaseThemeDay">
    <item name="navBarTheme">@style/NavbarThemeDay</item>
    <item name="editTheme">@style/EditFeedThemeDay</item>

    <item name="windowBackgroundColor">@color/day_background</item>
    <item name="navDrawerBackgroundColor">@color/day_navdrawer_background</item>

    <item name="listItemTitleColor">?android:attr/textColorPrimary</item>
    <item name="listItemTitleReadColor">@color/day_title_text_read_color</item>
    <item name="listItemAuthorColor">?android:attr/textColorSecondary</item>
    <item name="listItemBodyColor">@color/day_body_text_color</item>

    <item name="readerTitleColor">?android:attr/textColorPrimary</item>
    <item name="readerAuthorColor">?android:attr/textColorSecondary</item>
    <item name="readerFeedTitleColor">?attr/colorAccent</item>
    <item name="readerBodyColor">@color/day_reader_body_color</item>
  </style>

  <style name="AppThemeNight" parent="AppBaseThemeNight">
    <item name="navBarTheme">@style/NavbarThemeNight</item>
    <item name="editTheme">@style/EditFeedThemeNight</item>

    <item name="windowBackgroundColor">@color/night_background</item>
    <item name="navDrawerBackgroundColor">@color/night_navdrawer_background</item>

    <item name="listItemTitleColor">?android:attr/textColorPrimary</item>
    <item name="listItemTitleReadColor">@color/night_title_text_read_color</item>
    <item name="listItemAuthorColor">?android:attr/textColorSecondary</item>
    <item name="listItemBodyColor">@color/night_body_text_color</item>

    <item name="readerTitleColor">?android:attr/textColorPrimary</item>
    <item name="readerAuthorColor">?android:attr/textColorSecondary</item>
    <item name="readerFeedTitleColor">?attr/colorAccent</item>
    <item name="readerBodyColor">@color/night_reader_body_color</item>
  </style>

  <style name="AppBaseThemeDay" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowActionModeOverlay">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <item name="itemSwipingBGColor">@color/swiping_item_color</item>
    <item name="nightBGColor">@android:color/black</item>

    <item name="colorPrimary">@color/primary</item>
    <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/accentDay</item>
    <item name="colorSecondary">@color/accentDay</item>

    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorOnSecondary">@android:color/white</item>

    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@null</item>

    <!-- color for stuff in action bar -->
    <item name="colorControlNormal">@android:color/white</item>
    <item name="titleTextColor">@android:color/white</item>
    <item name="toolbarStyle">@style/AppTheme.ToolBar</item>

    <!-- Only needed for pre-L -->
    <item name="android:editTextBackground">@drawable/edit_text</item>
  </style>

  <style name="AppBaseThemeNight" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowActionModeOverlay">true</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <item name="itemSwipingBGColor">@color/swiping_item_color</item>
    <item name="nightBGColor">@android:color/black</item>

    <item name="colorPrimary">@color/primary</item>
    <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/accentNight</item>
    <item name="colorSecondary">@color/accentNight</item>

    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorOnSecondary">@android:color/white</item>

    <!-- color for stuff in action bar -->
    <item name="colorControlNormal">@android:color/white</item>
    <item name="titleTextColor">@android:color/white</item>
    <item name="toolbarStyle">@style/AppTheme.ToolBar</item>

    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@null</item>

    <!-- Only needed for pre-L -->
    <item name="android:editTextBackground">@drawable/edit_text</item>
  </style>

  <declare-styleable name="DrawShadowFrameLayout">
    <attr name="shadowDrawable" format="reference" />
    <attr name="shadowVisible" format="boolean" />
  </declare-styleable>

